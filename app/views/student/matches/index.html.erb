<%= link_to "Back to Student Section", student_path, class: "btn btn-default" %>
<section align="center">
  <h3>Today you will work with:
  <% @all_matches.each do |match| %>
    <% if match.date == Date.today %>
        <% if match.student_1 == current_user %>
          <i><%= match.student_2.name %></i>
        <% else %>
          <i><%= match.student_1.name %></i>
        <% end %>
      <% end %>
    <% end %>
  </h3>

  <h3>Your previous matches:
  </h3>
  <table align="center">
    <thead>
      <tr>
        <th>Day</th>
        <th>Student 1</th>
        <th></th>
        <th>Student 2</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @all_matches.each do |match| %>
        <% if match.date <= Date.today %>
          <tr>
            <td><%= match.date.strftime("%d-%m-%Y") %></td>
            <td><%= match.student_1.name %></td>
            <td>
              and
            </td>
            <td><%= match.student_2.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
